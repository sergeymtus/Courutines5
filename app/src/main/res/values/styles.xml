<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="iconTint">@color/color_like_selector</item>
        <item name="android:paddingLeft">@dimen/common_spacing</item>
    </style>

    <style name="Widget.AppTheme.ShareCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="iconTint">@color/color_share_selector</item>
    </style>

    <style name="Widget.AppTheme.WatchCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="iconTint">@color/watched</item>
    </style>

    <style name="Widget.AppTheme.Menu" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/menu</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.AppCompat.FloatingButtons" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="buttonTint">@color/colorAccent</item>
    </style>


</resources>